@page
@using CarRentingManagementLibrary.DataAccess;
@using CarRetingAppLibrary.DataAccess;
@using NguyenThanhDuyRazorPage.Pages.SessionHelpers;
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}


@{
    var user = SessionHelper.GetObjectFromJson<Customer>(HttpContext.Session, "user");
    var admin = SessionHelper.GetObjectFromJson<Admin>(HttpContext.Session, "admin");
    if (user != null)
    {

        SessionHelper.SetObjectAsJson(HttpContext.Session, "user", user);
        Response.Redirect("/OptionsPage/CustomerPage");
    }
    else if (admin != null)
    {
        SessionHelper.SetObjectAsJson(HttpContext.Session, "admin", admin);
        Response.Redirect("/OptionsPage/AdminPage");
    }
}

<div class="container mt-5">
    <div class="login-container">
        <h1 class="display-4">Login</h1>
        <form method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email address" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>